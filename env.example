# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# NextAuth.js v5 Configuration (AUTH_ prefix)
AUTH_SECRET=your_nextauth_secret
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret

# Optional: Trust proxy headers (when behind proxy)
AUTH_TRUST_HOST=true

# Deployment Configuration
# Base path for deployment (e.g., for GitHub Pages subdirectory deployment)
# Set to "/word-wheel-game" for GitHub Pages, or leave empty for root domain
NEXT_PUBLIC_BASE_PATH=/word-wheel-game